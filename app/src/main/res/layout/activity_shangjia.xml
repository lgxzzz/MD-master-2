<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coupon="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white">
    <com.lost.administrator.md.widget.CouponBgView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:background="#47BDBD"
        android:gravity="center_vertical"
        coupon:horizontal_style="circle"
        coupon:vertical_style="triangle">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="顺旺基优惠券"/>
            <TextView
                android:id="@+id/tv_distance_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:text="优惠10元"/>
            <TextView
                android:id="@+id/tv_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:text="券编号：2016070920160720"/>
            <TextView
                android:id="@+id/tv_canOrder_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:text="券编号：2016070920160720"/>

            <TextView
                android:id="@+id/tv_begin_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:text="2016-07-09至2016-07-20"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/push"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:background="@mipmap/wuxing"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </com.lost.administrator.md.widget.CouponBgView>
    <ImageView
        android:id="@+id/sheheh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        ></ImageView>

</RelativeLayout>